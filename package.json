{
  "name": "afterglow",
  "version": "1.0.0",
  "description": "Local desktop app + CLI for bulk twilight photo conversion using Gemini API",
  "main": "dist/main/index.js",
  "bin": {
    "afterglow": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "electron:dev": "electron-vite dev",
    "electron:build": "electron-vite build && electron-builder",
    "afterglow": "node ./dist/cli/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-table": "^8.11.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "exifreader": "^4.14.1",
    "lucide-react": "^0.294.0",
    "piexifjs": "^1.0.6",
    "sharp": "^0.33.1",
    "tailwind-merge": "^2.1.0",
    "uuid": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "electron-builder": "^25.0.5",
    "electron-vite": "^2.0.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.7"
  },
  "build": {
    "appId": "com.afterglow.app",
    "productName": "AfterGlow",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "target": "dmg"
    }
  }
}
